@section scripts{
    <script>

        function Banner() {
            $.ajax({
                url: '/Home/Banner',
                type: 'get',
                success: function (data) {
                    if (data.code == 200) {
                        var div = ``
                        $.each(data.data, function (k, v) {
                            div += `<div class="hs-item set-bg" data-setbg="${v.Image}">
                                                <div class="hs-text">
                                                    <div class="container">
                                                        <h2>${v.Name}</h2>
                                                        <p>${v.Des}</p>
                                                        <a href="#" class="site-btn">Read More</a>
                                                    </div>
                                                </div>
                                            </div>`
                        })
                        $('div[name="banner"]').append(div)
                    } else {
                        Swal.fire(
                            data.msg,
                            '',
                            'erorr'
                        )
                    }
                }
            })
        }
    </script>
    <script src="~/Scripts/owl.carousel.min.js"></script>
}

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    @*begin::Subheader*@
    <div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            @*begin::Info*@
            <div class="d-flex align-items-center flex-wrap mr-1">
                @* begin::Page Heading*@
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    @*begin::Page Title*@
                    <h5 class="text-dark font-weight-bold my-1 mr-5">Quản lý thẻ cấp thành viên</h5>
                    @*end::Page Title
                        begin::Breadcrumb*@
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Ứng dụng</a>

                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Thẻ thành viên</a>

                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Danh sách cấp bậc thẻ thành viên</a>
                        </li>


                    </ul>
                    @*end::Breadcrumb*@
                </div>
                @*end::Page Heading*@
            </div>
            @*end::Info*@
           
        </div>
    </div>
    @*end::Subheader
        begin::Entry*@

    @*begin::Container*@


    @*begin::Card*@
    <div class="card card-custom">
        <div class="card-header flex-wrap border-0 pt-6 pb-0">
            <div class="card-title">

            </div>
            <div class="card-toolbar">
                
                @*  begin::Button*@
                <a href="@Url.Action("CreatePromotion","PromotionAdmin",new {area ="Admin" })" class="btn btn-primary font-weight-bolder">
                    <span class="svg-icon svg-icon-md">
                        @*begin::Svg Icon | path:assets/media/svg/icons/Design/Flatten.svg*@
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                <rect x="0" y="0" width="24" height="24" />
                                <circle fill="#000000" cx="9" cy="15" r="6" />
                                <path d="M8.8012943,7.00241953 C9.83837775,5.20768121 11.7781543,4 14,4 C17.3137085,4 20,6.6862915 20,10 C20,12.2218457 18.7923188,14.1616223 16.9975805,15.1987057 C16.9991904,15.1326658 17,15.0664274 17,15 C17,10.581722 13.418278,7 9,7 C8.93357256,7 8.86733422,7.00080962 8.8012943,7.00241953 Z" fill="#000000" opacity="0.3" />
                            </g>
                        </svg>
                        @*end::Svg Icon*@
                    </span>Tạo mới
                </a>
                @*end::Button*@
            </div>
        </div>
        <div class="card-body">
            @*begin: Search Form
                begin::Search Form*@
            <div class="mb-7">
                <div class="row align-items-center">
                    <div class="col-lg-12 col-xl-12">
                        <div class="input-icon">
                            <input type="text" class="form-control" placeholder="Search..." id="Search" />
                            <span>
                                <i class="flaticon2-search-1 text-muted"></i>
                            </span>
                        </div>
                    </div>
                   
                </div>
            </div>
            @*end::Search *@
            @*end: Search Form*@


            @*begin: Datatable*@
            <div class="table-responsive" style="position: relative; height: 440px; overflow: auto;">
                <table id="accounttable" class="table">
                    <thead style="position: sticky; top: 0px; background: white">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Tiêu đề</th>
                            <th scope="col">Nội dung</th>
                            <th scope="col">Khoảng thời gian</th>
                            <th scope="col">Tỉ lệ</th>
                            <th scope="col">Người tạo</th>
                            <th scope="col">Trạng thái</th>


                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <div class="spinner spinner-success spinner-lg mr-15" style=" position: absolute; left: 50%; transform: translate(-50%, -50%);display:none"></div>
            </div>
            @*end: Datatable*@
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div class="d-flex flex-wrap py-2 mr-3">

                </div>
                <div class="d-flex align-items-center py-3">
                    <span class="text-muted" id="QtyNote"></span>
                </div>
            </div>
        </div>
        @*end::Card*@
    </div>
    @*end::Container*@
    @*Modal*@
    <div class="modal fade" id="createModal" role="dialog" aria-labelledby="exampleModalSizeSm" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Tạo cấp độ thẻ thành viên</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="form" id="MemberCardForm">
                        <div class="form-group">

                            <label>Cấp độ thẻ:</label>
                            <select class="form-control select2" style="width:100%" id="SelectLevel" name="CardLevel">
                            </select>

                        </div>
                        <div class="form-group">

                            <label>Mức lên cấp:</label>
                            <div class="input-group">
                                <input type="text" readonly name="LevelFee" class="form-control" aria-describedby="basic-addon2" />
                                <div class="input-group-append"><span class="input-group-text"><i class="la la-edit"></i></span></div>
                            </div>

                        </div>

                        <div class="form-group">
                            <label>Quà tặng:</label>
                            <select class="form-control select2" style="width:100%" id="SelectGift" name="Gift">
                            </select>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-6">
                                <label>Tỉ lệ tiền tặng:</label>
                                <div class="input-group">
                                    <input type="text" readonly name="RewardRate" class="form-control" aria-describedby="basic-addon2" />
                                    <div class="input-group-append"><span class="input-group-text">Điểm</span></div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label>Số điểm cộng:</label>
                                <div class="input-group">
                                    <input type="text" readonly name="PointPlus" class="form-control" aria-describedby="basic-addon2" />
                                    <div class="input-group-append"><span class="input-group-text">Điểm</span></div>
                                </div>
                            </div>

                        </div>
                        <div class="form-group ">
                            <div class="form-group">
                                <label>Quà tặng đặc biệt</label>
                                <div class="checkbox-inline">
                                    <label class="checkbox checkbox-disabled">
                                        <input type="checkbox" id="Personal" disabled="disabled" name="CheckGifs" />
                                        <span></span>
                                        Quà tặng cá nhân
                                    </label>
                                    <label class="checkbox checkbox-disabled">
                                        <input type="checkbox" id="Special" disabled="disabled" name="CheckGifs" />
                                        <span></span>
                                        Quà tặng dịp đặc biệt (sinh nhật,..)
                                    </label>
                                    <label class="checkbox checkbox-disabled">
                                        <input type="checkbox" id="Holiday" disabled="disabled" name="CheckGifs" />
                                        <span></span>
                                        Quà tặng ngày lễ
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Kỉ niệm đặt biệt</label>
                                <div class="checkbox-inline">
                                    <label class="checkbox checkbox-disabled">
                                        <input type="checkbox" id="AvailableTemplates" disabled="disabled" name="CheckMemory" />
                                        <span></span>
                                        Tự tại mẫu
                                    </label>
                                    <label class="checkbox checkbox-disabled">
                                        <input type="checkbox" id="CustomizeAvailableTemplate" disabled="disabled" name="CheckMemory" />
                                        <span></span>
                                        Chọn những mẫu có sẵn
                                    </label>
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <label>VIP</label>
                            <div class="checkbox-list">
                                <label class="checkbox">
                                    <input type="checkbox" name="CheckVIP" />
                                    <span></span>
                                    Có
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Đặc quyền VIP</label>
                            <div class="checkbox-inline">
                                <label class="checkbox checkbox-disabled" id="labelMocktail">
                                    <input type="checkbox" id="Mocktail" disabled="disabled" name="CheckVIPGifts" />
                                    <span></span>
                                    Ưu đãi Mocktail
                                </label>
                                <label class="checkbox checkbox-disabled">
                                    <input type="checkbox" id="VipRoom" disabled="disabled" name="CheckVIPGifts" />
                                    <span></span>
                                    Ưu đãi bàn và phòng VVIP
                                </label>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary font-weight-bold btnCreate">Tạo</button>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="~/Areas/assets/plugins/global/plugins.bundle.js"></script>
<script src="~/Areas/assets/js/pages/crud/forms/widgets/select2.js"></script>
<script src="~/Areas/assets/admin/FormatDate.js"></script>
<script src="~/Areas/assets/admin/promotion/Promotion.js"></script>
<script>
    $(document).ready(function (event) {
        $('#Search').on('keypress', function (event) {
            if (event.which === 13) {
                event.preventDefault();
                // Xử lý logic khi nhấn phím Enter
                initSearch($(this).val())
            }
        });
    });
</script>
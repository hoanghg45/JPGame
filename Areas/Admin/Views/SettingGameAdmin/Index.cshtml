    <div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <div class="d-flex align-items-center flex-wrap mr-1">
                <h5 class="text-dark font-weight-bold my-1 mr-5">Danh sách trò chơi trong hệ thống</h5>
            </div>
        </div>
    </div>

    <div class="card card-custom">

        <div class="card-header flex-wrap border-0 pt-6 pb-0">

            <div class="card-title">

            </div>
            <div class="card-toolbar">
                <div class="file-upload ">
                    <div class="file-select">
                        <div class="file-select-button" id="fileName"></div>
                        <div class="file-select-name" id="noFile"></div>
                        <input type="file" name="UploadedFile" id="chooseFile">
                    </div>
                </div>
                <button type="button" onclick="Import()" name="submit" value="" class="btn btn-light-primary font-weight-bolder m-2">
                    <span class="svg-icon svg-icon-md">


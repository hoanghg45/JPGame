
@{
    ViewBag.Title = "AddMemberCard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <!--begin::Page Title-->
                    <h5 class="text-dark font-weight-bold my-1 mr-5">Tạo cấp độ thẻ</h5>
                    <!--end::Page Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Ứng dụng</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Cấp thẻ thành viên</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Tạo cấp thẻ thành viên</a>
                        </li>
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->

        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Card-->
                    <div class="card card-custom gutter-b example example-compact">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin thẻ </h3>

                        </div>
                        <!--begin::Form-->
                        <form class="form" id="MemberCardForm">
                            <div class="card-body">
                                <div class="form-group">

                                    <label>Cấp độ thẻ:</label>
                                    <select class="form-control select2" style="width:100%" id="SelectLevel" name="CardLevel">
                                        @foreach (var level in ViewBag.levels)
                                        {
                                            <option value="@level.ID">@level.LevelName</option>
                                        }
                                    </select>

                                </div>
                                <div class="form-group">

                                    <label>Mức lên cấp:</label>
                                    <div class="input-group">
                                        <input type="text" readonly name="LevelFee" class="form-control" aria-describedby="basic-addon2" />
                                        <div class="input-group-append"><span class="input-group-text"><i class="la la-edit"></i></span></div>
                                    </div>

                                </div>

                                <div class="form-group">
                                    <label>Quà tặng:</label>
                                    <select class="form-control select2" style="width:100%" id="SelectGift" name="Gift">
                                        @foreach (var gift in ViewBag.gifts)
                                        {
                                            <option value="@gift.ID">@gift.GiftLevelName</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-6">
                                        <label>Tỉ lệ tiền tặng:</label>
                                        <div class="input-group">
                                            <input type="text" readonly name="RewardRate" class="form-control" aria-describedby="basic-addon2" />
                                            <div class="input-group-append"><span class="input-group-text">%</span></div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <label>Số điểm cộng:</label>
                                        <div class="input-group">
                                            <input type="text" readonly name="PointPlus" class="form-control" aria-describedby="basic-addon2" />
                                            <div class="input-group-append"><span class="input-group-text">Điểm</span></div>
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group ">
                                    <div class="form-group">
                                        <label>Quà tặng đặc biệt</label>
                                        <div class="checkbox-inline">
                                            <label class="checkbox checkbox-disabled">
                                                <input type="checkbox" id="Personal" disabled="disabled" name="CheckGifs" />
                                                <span></span>
                                                Quà tặng cá nhân
                                            </label>
                                            <label class="checkbox checkbox-disabled">
                                                <input type="checkbox" id="Special" disabled="disabled" name="CheckGifs" />
                                                <span></span>
                                                Quà tặng dịp đặc biệt (sinh nhật,..)
                                            </label>
                                            <label class="checkbox checkbox-disabled">
                                                <input type="checkbox" id="Holiday" disabled="disabled" name="CheckGifs" />
                                                <span></span>
                                                Quà tặng ngày lễ
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Kỉ niệm đặt biệt</label>
                                        <div class="checkbox-inline">
                                            <label class="checkbox checkbox-disabled">
                                                <input type="checkbox" id="AvailableTemplates" disabled="disabled" name="CheckMemory" />
                                                <span></span>
                                                Tự tạo mẫu
                                            </label>
                                            <label class="checkbox checkbox-disabled">
                                                <input type="checkbox" id="CustomizeAvailableTemplate" disabled="disabled" name="CheckMemory" />
                                                <span></span>
                                                Chọn những mẫu có sẵn
                                            </label>
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label>VIP</label>
                                    <div class="checkbox-list">
                                        <label class="checkbox">
                                            <input type="checkbox" name="CheckVIP" />
                                            <span></span>
                                            Có
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Đặc quyền VIP</label>
                                    <div class="checkbox-inline">
                                        <label class="checkbox checkbox-disabled" id="labelMocktail">
                                            <input type="checkbox" id="Mocktail" disabled="disabled" name="CheckVIPGifts" />
                                            <span></span>
                                            Ưu đãi Mocktail
                                        </label>
                                        <label class="checkbox checkbox-disabled">
                                            <input type="checkbox" id="VipRoom" disabled="disabled" name="CheckVIPGifts" />
                                            <span></span>
                                            Ưu đãi bàn và phòng VVIP
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <!--end::Form-->
                        <div class="card-footer">
                            <a class="btn btn-primary mr-2 " href="@Url.Action("Index","MemberCardLevel")">Trở về danh sách</a>
                            <button type="button" class="btn btn-success mr-2 btnCreate">Tạo</button>
                        </div>
                    </div>
                    <!--end::Card-->

                </div>

            </div>
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>
<script src="~/Areas/assets/plugins/global/plugins.bundle.js"></script>
<script src="~/Areas/assets/js/pages/crud/forms/widgets/select2.js"></script>
<script src="~/Areas/assets/admin/FormatDate.js"></script>
<script src="~/Areas/assets/admin/membercardlevel/MemberCardLevel.js"></script>
<script src="~/Areas/assets/admin/membercardlevel/AddMemberCard.js"></script>